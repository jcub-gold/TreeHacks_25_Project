{
    "manifest_version": 3,
    "name": "X.COM Fact Checker",
    "version": "1.0",
    "description": "Extracts tweet text and fact-checks it.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://x.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://x.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  